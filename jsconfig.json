{
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "dist", "coverage"],
  "compilerOptions": {
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "App/*": ["./src/*"],
      "Icons/*": ["./src/assets/icons*"],
      "Images/*": ["./src/assets/images*"],
      "Styles/*": ["./src/assets/styles*"],
      "Components/*": ["./src/components*"],
      "Constants/*": ["./src/constants*"],
      "Pages/*": ["./src/pages*"],
      "Store/*": ["./src/store*"],
      "Router/*": ["./src/router*"],
      "Utils/*": ["./src/utils*"],
      "Directives/*": ["./src/directives*"],
      "Services": ["./src/services*"]
    }
  }
}
